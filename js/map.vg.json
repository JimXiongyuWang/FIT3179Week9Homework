{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Deaths Attributed to Unsafe Water Source (2019)",
    "width": 800,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/JimXiongyuWang/FIT3179Week9Homework/main/js/ne_110m.json?token=GHSAT0AAAAAACHXA2CGT7CVTWEW4MFWRC3EZINCT4Q",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/JimXiongyuWang/FIT3179Week9Homework/main/data/share-deaths-unsafe-water.csv?token=GHSAT0AAAAAACHXA2CG6YQDRCPWY6MU6TXOZINCULA" // Replace with your CSV data URL
              },
              "key": "Entity",
              "fields": ["Share of total deaths that are from all causes attributed to unsafe water source, in both sexes aged age-standardized"]
            },
            "as": "waterData"
          },
          {
            "filter": "datum.waterData.Year === 2019"
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "waterData.Share of total deaths that are from all causes attributed to unsafe water source, in both sexes aged age-standardized",
            "type": "quantitative"
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "waterData.Share of total deaths that are from all causes attributed to unsafe water source, in both sexes aged age-standardized", "type": "quantitative", "title": "Deaths (%) Due to Unsafe Water"}
          ]
        }
      }
    ]
  }
  
    
